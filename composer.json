{
    "name": "mehdirochdi/cmi-payment-php",
    "description": "PHP package to communicate with the CMI payment plateform in Morocco",
    "keywords": [
        "cmi",
        "cmi online payment",
        "payment processing",
        "morocco payment",
        "cmi payment",
        "payment in morocco",
        "paiement en ligne cmi",
        "cmi paiement en ligne",
        "paiement en ligne maroc",
        "cmi paiement php",
        "cmi payment php",
        "paiement au maroc",
        "laravel CMI",
        "laravel maroc payment"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "mehdi rochdi",
            "email": "mehdi.rochdi@gmail.com",
            "homepage": "https://github.com/mehdirochdi/cmi-php/graphs/contributors"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "illuminate/support": "^9.0||^10.0",
        "illuminate/session": "^9.0||^10.0",
        "illuminate/events": "^9.0||^10.0",
        "nesbot/carbon": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "friendsofphp/php-cs-fixer": "^3.13",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Mehdirochdi\\CMI\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CMI\\": [
                "tests/"
            ]
        }
    },
    "scripts": {
        "test" : "vendor/bin/phpunit"
    }
}
